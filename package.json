{
  "name": "mattlehrer.com-eleventy",
  "description": "code for mattlehrer.com built with eleventy, tailwind, alpinejs, and snowpack.",
  "author": {
    "name": "Matt Lehrer",
    "email": "hi@mattlehrer.com"
  },
  "scripts": {
    "clean": "rimraf _site",
    "serve": "serve --no-clipboard --listen 8080 dist",
    "dev": "NODE_ENV=development run-s clean dev:*",
    "dev:snowpack": "snowpack dev",
    "build": "NODE_ENV=production run-s clean build:*",
    "build:snowpack": "snowpack build",
    "build:sw": "workbox generateSW",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js,.html src/",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.njk src/**/*.css",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js,.html src/ --fix",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.njk src/**/*.css --fix",
    "format:prettier": "prettier --write .",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "version": "1.0.0",
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mattlehrer/mattlehrer.com-eleventy-snowpack"
  },
  "license": "ISC",
  "private": true,
  "homepage": "https://www.mattlehrer.com",
  "browserslist": [
    "defaults",
    "maintained node versions",
    "> 5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,js,html}": "stylelint --fix",
    "*.{js,html}": "eslint --fix"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-img": "^0.7.8",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.16.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "snowpack": "^3.0.11",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "^2.0.2",
    "tailwindcss-debug-screens": "^2.0.0",
    "workbox-cli": "^6.1.0"
  },
  "dependencies": {
    "alpinejs": "^2.8.0",
    "turbolinks": "^5.2.0"
  }
}
